<%- include("includes/head.ejs") %>
<link rel="stylesheet" href="/css/list.css">
</head>
<body>
    <%- include("includes/navbar.ejs") %>
    <div class="list">
    <h1 class="list__header">LIST OF PRODUCTS</h1>
    <% if (products.length === 0) { %>
     <h1 class="list__header">THERE ARE NO PRODUCTS!</h1>
    <% } else { %>
        <ul class="list__list">
        <% for(const product of products) { %>
            <%- include("includes/product.ejs", {product}) %>
        <% } %>
        </ul>
    <% }%>
    </div>
</body>
</html>